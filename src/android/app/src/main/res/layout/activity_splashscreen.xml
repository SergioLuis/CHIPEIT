<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreenActivity"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <!-- Rainbow -->
    <LinearLayout
        android:id="@+id/rainbow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/orange" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/yellow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/indigo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_splashscreen_rainbow_view_height"
            android:background="@color/purple" />
    </LinearLayout>

    <!-- Application title -->
    <yanzhikai.textpath.AsyncTextPathView
        android:id="@+id/activity_splashscreen_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:duration="@integer/activity_splashscreen_title_txt_anim_duration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rainbow"
        app:paintStrokeColor="@color/activity_splashscreen_title_txt_paintStrokeColor"
        app:pathStrokeColor="@color/activity_splashscreen_title_txt_pathStrokeColor"
        app:showPainter="true"
        app:text="@string/app_name"
        app:textInCenter="true"
        app:textSize="@dimen/activity_splashscreen_title_txt_size" />

    <!-- GPLv3 logo -->
    <ImageView
        android:id="@+id/activity_splashscreen_gplv3_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_splashscreen_gplv3_img_marginBottom"
        android:tint="@color/white"
        android:contentDescription="@string/activity_splashscreen_gplv3_img_contentDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_gplv3_logo" />

</android.support.constraint.ConstraintLayout>
