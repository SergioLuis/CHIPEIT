<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_gamelibrary_item_height"
    android:layout_marginStart="@dimen/list_gamelibrary_item_marginLeft"
    android:layout_marginTop="@dimen/list_gamelibrary_item_marginTop"
    android:layout_marginEnd="@dimen/list_gamelibrary_item_marginRight"
    android:layout_marginBottom="@dimen/list_gamelibrary_item_marginBottom"
    card_view:cardCornerRadius="@dimen/list_gamelibrary_item_cornerRadius">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_gamelibrary_item_background">

        <TextView
            android:id="@+id/list_gamelibrary_item_backgroundtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_gamelibrary_item_backgroundtitle_marginTop"
            android:layout_marginStart="@dimen/list_gamelibrary_item_backgroundtitle_txt_marginStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/list_gamelibrary_item_foregroundtitle_background"
            android:singleLine="true"
            android:textColor="@color/list_gamelibrary_item_backgroundtitle_textColor"
            android:textSize="@dimen/list_gamelibrary_item_backgroundtitle_txt_textSize"/>

        <LinearLayout
            android:id="@+id/list_gamelibrary_item_foregroundtitle_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_gamelibrary_item_foregroundtitle_background_height"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:layout_gravity="bottom" >

            <TextView
                android:id="@+id/list_gamelibrary_item_foregroundtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/list_gamelibrary_item_foregroundtitle_txt_marginStart"
                android:textColor="@color/list_gamelibrary_item_foregroundtitle_textColor"
                android:textSize="@dimen/list_gamelibrary_item_foregroundtitle_txt_textSize"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
